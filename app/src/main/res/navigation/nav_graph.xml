<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/artFragment">

    <fragment
        android:id="@+id/artFragment"
        android:name="dev.vengateshm.artbookappandroidtestingudemy.view.ArtFragment"
        android:label="ArtFragment" >
        <action
            android:id="@+id/action_artFragment_to_artDetailsFragment"
            app:destination="@id/artDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/artDetailsFragment"
        android:name="dev.vengateshm.artbookappandroidtestingudemy.view.ArtDetailsFragment"
        android:label="ArtDetailsFragment" >
        <action
            android:id="@+id/action_artDetailsFragment_to_imageSearchFragment"
            app:destination="@id/imageSearchFragment" />
    </fragment>
    <fragment
        android:id="@+id/imageSearchFragment"
        android:name="dev.vengateshm.artbookappandroidtestingudemy.view.ImageSearchFragment"
        android:label="ImageSearchFragment" />
</navigation>